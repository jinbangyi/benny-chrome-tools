{
  "manifest_version": 3,
  "name": "Network Monitor Extension",
  "version": "1.0.0",
  "description": "Monitor network requests in DevTools and forward events to localhost server",
  "permissions": [
    "debugger",
    "activeTab",
    "storage",
    "background"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Network Monitor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}